@model IEnumerable<TP033184FlightBookingSystem.Models.Passenger>

@{
    ViewBag.Title = "Index";
}

<h2>Customer Profile Detail</h2>

<p>
    @Html.ActionLink("Create Customer Profile", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Customer Name
        </th>
        <th>
            Customer Email
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.userName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.userPassword)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.passengerID }) |
            @Html.ActionLink("Details", "Details", new { id=item.passengerID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.passengerID })
        </td>
    </tr>
}

</table>
