@model IEnumerable<TP033184FlightBookingSystem.Models.Booking>

@{
    ViewBag.Title = "Index";
}

<h2>Flight Booking Detail</h2>

<p>
    @Html.ActionLink("Book a Flight", "Create")
</p>
<table class="table">
    <tr>
        <th>
          Seat Number
        </th>
        <th>
           Flight Name
        </th>
        <th>
            Customer Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.seat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Flight.flightname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Passenger.userName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.bookingID }) |
            @Html.ActionLink("Details", "Details", new { id=item.bookingID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.bookingID })
        </td>
    </tr>
}

</table>
